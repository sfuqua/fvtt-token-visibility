{
    "compilerOptions": {
        "outDir": "./module",

        "removeComments": true,

        "esModuleInterop": true,
        "lib": ["dom", "es2017"],
        "importHelpers": true,
        "module": "ES6",
        "moduleResolution": "node",
        "resolveJsonModule": true,

        "skipLibCheck": true,

        "strict": true,
        "allowUnreachableCode": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,

        "target": "es2017",
        "types": ["foundry-pc-types", "jest"]
    },
    "include": ["./src/**/*"],
    "exclude": ["./src/**/*.spec.ts"]
}
